procedure TFrmPrincipal.geraNumeros(Sender: TObject);
begin
  if (DayOf(today) mod 3 = 0) then
     begin
      if ultimaData = today then
      begin
        TThread.Synchronize(nil,procedure
            begin
              lblSTOP.Text := 'JOGOS VÁLIDOS ATÉ DIA ' + DateToStr(date + 3);

              atualizaJogoDez;
              atualizaJogoNove;
              atualizaJogoOito;
              atualizaJogoSete;
              atualizaJogoSeis;
              atualizaJogoCinco;
              atualizaJogoQuatro;
              atualizaJogoTres;
              atualizaJogoDois;
              atualizaJogoUm;



              sleep(2000);
              TLoading.Hide;
            end);
      end
      else
      begin
          //TLoading.Show(FrmPrincipal, 'Gerando os números vencedores...');


          TThread.CreateAnonymousThread(procedure
          begin
            {deletaBanco;
            dmPrincipal.CriarJogoLotomaniaUm;
            dmPrincipal.CriarJogoLotomaniaDois;
            dmPrincipal.CriarJogoLotomaniaTres;
            dmPrincipal.CriaNumerosAleatoriosJogo1;
            dmPrincipal.CriaNumerosAleatoriosJogo2;
            dmPrincipal.CriaNumerosAleatoriosJogo3;
            dmPrincipal.CriaNumerosAleatoriosJogo4;
            dmPrincipal.CriaNumerosAleatoriosJogo5;
            dmPrincipal.CriaNumerosAleatoriosJogo6;
            dmPrincipal.CriaNumerosAleatoriosJogo7;
            dmPrincipal.CriaNumerosAleatoriosJogo8;
            dmPrincipal.CriaNumerosAleatoriosJogo9;
            dmPrincipal.CriaNumerosAleatoriosJogo10;

            dmPrincipal.qryONLINEDATA.Active := False;
            dmPrincipal.qryONLINEDATA.Active := True;
            dmPrincipal.qryONLINEDATA.insert;
            dmPrincipal.qryONLINEDATA.FieldByName('ULTIMA_ATT').AsDateTime := today;
            dmPrincipal.qryONLINEDATA.Post;    }


            TThread.Synchronize(nil,procedure
            begin
              lblSTOP.Text := 'JOGOS VÁLIDOS ATÉ DIA ' + DateToStr(date + 3);

              atualizaJogoDez;
              atualizaJogoNove;
              atualizaJogoOito;
              atualizaJogoSete;
              atualizaJogoSeis;
              atualizaJogoCinco;
              atualizaJogoQuatro;
              atualizaJogoTres;
              atualizaJogoDois;
              atualizaJogoUm;



              //sleep(2000);
              //TLoading.Hide;
            end);

          end).Start;
      end;

     end;



     if DayOf(yesterday) mod 3 = 0 then
     begin

        dmPrincipal.qryNUMEROSUM.Active := False;
        dmPrincipal.qryNUMEROSUM.Active := True;

        if not dmPrincipal.qryNUMEROSUM.IsEmpty then
        begin
          TThread.Synchronize(nil,procedure
          begin
            lblSTOP.Text := 'JOGOS VÁLIDOS ATÉ DIA ' + DateToStr(date + 2);

            atualizaJogoDez;
            atualizaJogoNove;
            atualizaJogoOito;
            atualizaJogoSete;
            atualizaJogoSeis;
            atualizaJogoCinco;
            atualizaJogoQuatro;
            atualizaJogoTres;
            atualizaJogoDois;
            atualizaJogoUm;


          end);
        end
        else
        begin
          //TLoading.Show(FrmPrincipal, 'Gerando os números vencedores...');


          TThread.CreateAnonymousThread(procedure
          begin
           { deletaBanco;
            //dmPrincipal.CriarJogoLotomaniaUm;
            dmPrincipal.CriaNumerosAleatoriosJogo1;
            dmPrincipal.CriaNumerosAleatoriosJogo2;
            dmPrincipal.CriaNumerosAleatoriosJogo3;
            dmPrincipal.CriaNumerosAleatoriosJogo4;
            dmPrincipal.CriaNumerosAleatoriosJogo5;
            dmPrincipal.CriaNumerosAleatoriosJogo6;
            dmPrincipal.CriaNumerosAleatoriosJogo7;
            dmPrincipal.CriaNumerosAleatoriosJogo8;
            dmPrincipal.CriaNumerosAleatoriosJogo9;
            dmPrincipal.CriaNumerosAleatoriosJogo10;

            dmPrincipal.qryONLINEDATA.Active := False;
            dmPrincipal.qryONLINEDATA.Active := True;
            dmPrincipal.qryONLINEDATA.insert;
            dmPrincipal.qryONLINEDATA.FieldByName('ULTIMA_ATT').AsDateTime := today;
            dmPrincipal.qryONLINEDATA.Post;   }


            TThread.Synchronize(nil,procedure
            begin
              lblSTOP.Text := 'JOGOS VÁLIDOS ATÉ DIA ' + DateToStr(date + 2);

              atualizaJogoDez;
              atualizaJogoNove;
              atualizaJogoOito;
              atualizaJogoSete;
              atualizaJogoSeis;
              atualizaJogoCinco;
              atualizaJogoQuatro;
              atualizaJogoTres;
              atualizaJogoDois;
              atualizaJogoUm;



              //sleep(2000);
              //TLoading.Hide;
            end);

          end).Start;
        end;

     end;


     if DayOf(Date - 2) mod 3 = 0 then
     begin
        dmPrincipal.qryNUMEROSUM.Active := False;
        dmPrincipal.qryNUMEROSUM.Active := True;

        if not dmPrincipal.qryNUMEROSUM.IsEmpty then
        begin
          TThread.Synchronize(nil,procedure
          begin
            lblSTOP.Text := 'JOGOS VÁLIDOS ATÉ DIA ' + DateToStr(date + 1);

            atualizaJogoDez;
            atualizaJogoNove;
            atualizaJogoOito;
            atualizaJogoSete;
            atualizaJogoSeis;
            atualizaJogoCinco;
            atualizaJogoQuatro;
            atualizaJogoTres;
            atualizaJogoDois;
            atualizaJogoUm;


          end);
        end
        else
        begin
          //TLoading.Show(FrmPrincipal, 'Gerando os números vencedores...');


          TThread.CreateAnonymousThread(procedure
          begin
           { deletaBanco;
            //dmPrincipal.CriarJogoLotomaniaUm;
            dmPrincipal.CriaNumerosAleatoriosJogo1;
            dmPrincipal.CriaNumerosAleatoriosJogo2;
            dmPrincipal.CriaNumerosAleatoriosJogo3;
            dmPrincipal.CriaNumerosAleatoriosJogo4;
            dmPrincipal.CriaNumerosAleatoriosJogo5;
            dmPrincipal.CriaNumerosAleatoriosJogo6;
            dmPrincipal.CriaNumerosAleatoriosJogo7;
            dmPrincipal.CriaNumerosAleatoriosJogo8;
            dmPrincipal.CriaNumerosAleatoriosJogo9;
            dmPrincipal.CriaNumerosAleatoriosJogo10;

            dmPrincipal.qryONLINEDATA.Active := False;
            dmPrincipal.qryONLINEDATA.Active := True;
            dmPrincipal.qryONLINEDATA.insert;
            dmPrincipal.qryONLINEDATA.FieldByName('ULTIMA_ATT').AsDateTime := today;
            dmPrincipal.qryONLINEDATA.Post;    }


            TThread.Synchronize(nil,procedure
            begin
              lblSTOP.Text := 'JOGOS VÁLIDOS ATÉ DIA ' + DateToStr(date + 1);

              atualizaJogoDez;
              atualizaJogoNove;
              atualizaJogoOito;
              atualizaJogoSete;
              atualizaJogoSeis;
              atualizaJogoCinco;
              atualizaJogoQuatro;
              atualizaJogoTres;
              atualizaJogoDois;
              atualizaJogoUm;



              //sleep(2000);
              //TLoading.Hide;
            end);

          end).Start;
        end;
     end;
end;

procedure TFrmPrincipal.Image1Click(Sender: TObject);
begin
  OpenMenu(false);
end;

procedure TFrmPrincipal.Image2Click(Sender: TObject);
begin
  openMenu(true);
end;

procedure TFrmPrincipal.Label13Click(Sender: TObject);
begin
  TThread.Synchronize(nil,procedure
    begin
      WidthAnimation2.Start;
    end);

    TThread.Synchronize(nil,procedure
    begin
      image2.HitTest := false;
      label12.Visible := false;
      layout52.Visible := false;
    end);
end;

procedure TFrmPrincipal.Label14Click(Sender: TObject);
begin
  Application.CreateForm(TFrmVencedores,frmVencedores);
  frmVencedores.show;

  //frmPrincipal.Close;
end;

procedure TFrmPrincipal.Label15Click(Sender: TObject);
begin
  Application.CreateForm(TFrmLotomania,frmLotomania);
  frmLotomania.show;

  FrmLotomania.geraLotomaniaUm(FrmLotomania);
  FrmLotomania.geraLotomaniaDois(FrmLotomania);
  FrmLotomania.geraLotomaniaTres(FrmLotomania);
end;

procedure TFrmPrincipal.Label16Click(Sender: TObject);
begin
  Application.CreateForm(TFrmTabela,FrmTabela);
  frmTabela.Show;

  //frmPrincipal.Close;
end;

procedure TFrmPrincipal.OpenMenu(open : Boolean);
begin
  if not open then
  begin
    TThread.Synchronize(nil,procedure
    begin
      RecMenuFundo.Visible := true;

      WidthAnimation.Start;
    end);

  end;

  if open then
  begin

    TThread.Synchronize(nil,procedure
    begin
      WidthAnimation2.Start;
    end);

    TThread.Synchronize(nil,procedure
    begin
      image2.HitTest := false;
      label12.Visible := false;
      layout52.Visible := false;
    end);

  end;

end;

procedure TFrmPrincipal.atualizaJogoUm;
var
i: integer;
arrayInteiros : array [1..16] of integer;
begin
  i := 1;

  dmPrincipal.qryNUMEROSUM.Active := False;
  dmPrincipal.qryNUMEROSUM.Active := True;

  while not dmPrincipal.qryNUMEROSUM.Eof do
  begin
    arrayInteiros[i] := dmPrincipal.qryNUMEROSUM.FieldByName('NUMEROS_A').AsInteger;

    dmPrincipal.qryNUMEROSUM.next;

    i := i + 1;
  end;

  label1a.Text := IntToStr(arrayInteiros[1]);
  label2a.Text := IntToStr(arrayInteiros[2]);
  label3a.Text := IntToStr(arrayInteiros[3]);
  label4a.Text := IntToStr(arrayInteiros[4]);
  label5a.Text := IntToStr(arrayInteiros[5]);
  label6a.Text := IntToStr(arrayInteiros[6]);
  label7a.Text := IntToStr(arrayInteiros[7]);
  label8a.Text := IntToStr(arrayInteiros[8]);
  label9a.Text := IntToStr(arrayInteiros[9]);
  label10a.Text := IntToStr(arrayInteiros[10]);
  label11a.Text := IntToStr(arrayInteiros[11]);
  label12a.Text := IntToStr(arrayInteiros[12]);
  label13a.Text := IntToStr(arrayInteiros[13]);
  label14a.Text := IntToStr(arrayInteiros[14]);
  label15a.Text := IntToStr(arrayInteiros[16]);

end;

procedure TFrmPrincipal.atualizaJogoDois;
var
i: integer;
arrayInteiros : array [1..16] of integer;
begin
  i := 1;

  dmPrincipal.qryNUMEROSDOIS.Active := False;
  dmPrincipal.qryNUMEROSDOIS.Active := True;

  while not dmPrincipal.qryNUMEROSDOIS.Eof do
  begin
    arrayInteiros[i] := dmPrincipal.qryNUMEROSDOIS.FieldByName('NUMEROS_B').AsInteger;

