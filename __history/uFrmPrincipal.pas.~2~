procedure TFrmPrincipal.deletaBanco;
begin
  dmPrincipal.qryONLINEDELETAR.Active := False;
  dmPrincipal.qryONLINEDELETAR.sql.Clear;
  dmPrincipal.qryONLINEDELETAR.sql.Add('DELETE FROM JOGO_UM');
  dmPrincipal.qryONLINEDELETAR.ExecSQL;

  dmPrincipal.qryONLINEDELETAR.Active := False;
  dmPrincipal.qryONLINEDELETAR.sql.Clear;
  dmPrincipal.qryONLINEDELETAR.sql.Add('DELETE FROM JOGO_DOIS');
  dmPrincipal.qryONLINEDELETAR.ExecSQL;

  dmPrincipal.qryONLINEDELETAR.Active := False;
  dmPrincipal.qryONLINEDELETAR.sql.Clear;
  dmPrincipal.qryONLINEDELETAR.sql.Add('DELETE FROM JOGO_TRES');
  dmPrincipal.qryONLINEDELETAR.ExecSQL;

  dmPrincipal.qryONLINEDELETAR.Active := False;
  dmPrincipal.qryONLINEDELETAR.sql.Clear;
  dmPrincipal.qryONLINEDELETAR.sql.Add('DELETE FROM JOGO_QUATRO');
  dmPrincipal.qryONLINEDELETAR.ExecSQL;

  dmPrincipal.qryONLINEDELETAR.Active := False;
  dmPrincipal.qryONLINEDELETAR.sql.Clear;
  dmPrincipal.qryONLINEDELETAR.sql.Add('DELETE FROM JOGO_CINCO');
  dmPrincipal.qryONLINEDELETAR.ExecSQL;

  dmPrincipal.qryONLINEDELETAR.Active := False;
  dmPrincipal.qryONLINEDELETAR.sql.Clear;
  dmPrincipal.qryONLINEDELETAR.sql.Add('DELETE FROM JOGO_SEIS');
  dmPrincipal.qryONLINEDELETAR.ExecSQL;

  dmPrincipal.qryONLINEDELETAR.Active := False;
  dmPrincipal.qryONLINEDELETAR.sql.Clear;
  dmPrincipal.qryONLINEDELETAR.sql.Add('DELETE FROM JOGO_SETE');
  dmPrincipal.qryONLINEDELETAR.ExecSQL;

  dmPrincipal.qryONLINEDELETAR.Active := False;
  dmPrincipal.qryONLINEDELETAR.sql.Clear;
  dmPrincipal.qryONLINEDELETAR.sql.Add('DELETE FROM JOGO_OITO');
  dmPrincipal.qryONLINEDELETAR.ExecSQL;

  dmPrincipal.qryONLINEDELETAR.Active := False;
  dmPrincipal.qryONLINEDELETAR.sql.Clear;
  dmPrincipal.qryONLINEDELETAR.sql.Add('DELETE FROM JOGO_NOVE');
  dmPrincipal.qryONLINEDELETAR.ExecSQL;

  dmPrincipal.qryONLINEDELETAR.Active := False;
  dmPrincipal.qryONLINEDELETAR.sql.Clear;
  dmPrincipal.qryONLINEDELETAR.sql.Add('DELETE FROM JOGO_DEZ');
  dmPrincipal.qryONLINEDELETAR.ExecSQL;

  dmPrincipal.qryONLINEDELETAR.Active := False;
  dmPrincipal.qryONLINEDELETAR.sql.Clear;
  dmPrincipal.qryONLINEDELETAR.sql.Add('DELETE FROM LOTOMANIA_UM');
  dmPrincipal.qryONLINEDELETAR.ExecSQL;

  dmPrincipal.qryONLINEDELETAR.Active := False;
  dmPrincipal.qryONLINEDELETAR.sql.Clear;
  dmPrincipal.qryONLINEDELETAR.sql.Add('DELETE FROM LOTOMANIA_DOIS');
  dmPrincipal.qryONLINEDELETAR.ExecSQL;

  dmPrincipal.qryONLINEDELETAR.Active := False;
  dmPrincipal.qryONLINEDELETAR.sql.Clear;
  dmPrincipal.qryONLINEDELETAR.sql.Add('DELETE FROM LOTOMANIA_TRES');
  dmPrincipal.qryONLINEDELETAR.ExecSQL;

  dmPrincipal.qryONLINEDELETAR.Active := False;
  dmPrincipal.qryONLINEDELETAR.sql.Clear;
  dmPrincipal.qryONLINEDELETAR.sql.Add('DELETE FROM DATA_ATT');
  dmPrincipal.qryONLINEDELETAR.ExecSQL;
end;




procedure TFrmPrincipal.WidthAnimationFinish(Sender: TObject);
begin
  TThread.Synchronize(nil,procedure
    begin
      image2.HitTest := true;
      label12.Visible := true;
      layout52.Visible := true;
    end);
end;

end.
